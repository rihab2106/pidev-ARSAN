<AnchorPane id="AnchorPane" fx:id="game_paine" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.trophy.Controller.QGamesController">
   <children>
      <HBox fx:id="Hbox_games_button" alignment="CENTER_LEFT" layoutX="21.0" layoutY="115.0" prefHeight="82.0" prefWidth="736.0" spacing="20.0">
         <children>
            <Button fx:id="add_game" mnemonicParsing="false" prefHeight="40.0" prefWidth="90.0" text="Add">
               <effect>
                  <Glow level="0.47" />
               </effect></Button>
            <Button fx:id="delete_game" mnemonicParsing="false" prefHeight="40.0" prefWidth="90.0" text="Delete" />
            <TextField fx:id="game_in_search" prefHeight="42.0" prefWidth="317.0" promptText="Search game " />
            <Button fx:id="game_stat" mnemonicParsing="false" onAction="#show_stat" prefHeight="40.0" prefWidth="90.0" text="Show Stat" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      <Label fx:id="Title" layoutX="584.0" layoutY="52.0" text="Games">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <HBox fx:id="game_hbox_view" layoutX="32.0" layoutY="229.0" spacing="20.0">
         <children>
            <TableView fx:id="tableview_game" editable="true" prefHeight="476.0" prefWidth="673.0" stylesheets="@../../../../dark%20theme.css" tableMenuButtonVisible="true">
              <columns>
                  <TableColumn fx:id="game_name" prefWidth="136.800048828125" text="Name" />
                  <TableColumn fx:id="game_description" minWidth="69.60009765625" prefWidth="144.800048828125" text="Description" />
                  <TableColumn fx:id="game_category" minWidth="0.0" prefWidth="146.4000244140625" text="Category" />
                  <TableColumn fx:id="games_rate" prefWidth="112.800048828125" text="Rate" />
                  <TableColumn fx:id="game_trophies" prefWidth="171.2001953125" text="Trophies" />
              </columns>
               <contextMenu>
                  <ContextMenu fx:id="game_con">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Unspecified Action" />
                    </items>
                  </ContextMenu>
               </contextMenu>
            </TableView>
            <Accordion fx:id="game_acc" prefHeight="476.0" prefWidth="545.0" />
         </children>
      </HBox>
      <MenuBar fx:id="game_menu_bar" layoutY="1.0" prefHeight="30.0" prefWidth="1282.0">
         <menus>
            <Menu mnemonicParsing="false" text="File">
              <items>
                <MenuItem fx:id="fun" mnemonicParsing="false" onAction="#ShowFunFact" text="Fun Fact " />
                  <MenuItem fx:id="game_sort" mnemonicParsing="false" onAction="#SortGames" text="Sort" />
              </items>
            </Menu>
         </menus></MenuBar>
      <StackPane layoutX="110.0" layoutY="4.0" prefHeight="150.0" prefWidth="200.0" />
   </children>
   <stylesheets>
      <URL value="@../../../../dark%20theme.css" />
      <URL value="@../Css/qgames.css" />
